{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true
        }
      }
    ],
    "webpack": true
  },
  "projects": {
    "ftso-protocol": {
      "type": "library",
      "root": "libs/ftso-protocol",
      "entryFile": "index",
      "sourceRoot": "libs/ftso-protocol/src",
      "compilerOptions": {
        "tsConfigPath": "libs/ftso-protocol/tsconfig.lib.json"
      }
    }
  }
}