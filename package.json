{
  "name": "hardhat-project",
  "scripts": {
    "compile": "yarn hardhat compile && yarn typechain-ethers-v6 && yarn typechain-truffle-v5 && yarn typechain-web3-v1",
    "c": "yarn compile",
    "typechain-ethers-v6": "yarn typechain --target=ethers-v6 --out-dir typechain \"artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json\" 1> nul",
    "typechain-truffle-v5": "yarn typechain --target=truffle-v5 --out-dir typechain-truffle \"artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json\" 1> nul",
    "typechain-web3-v1": "yarn typechain --target=web3-v1 --out-dir typechain-web3 \"artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json\" 1> nul",
    "-------TESTS---------": "",
    "test": "yarn hardhat test",
    "test-coverage": "nyc yarn hardhat coverage"
  },
  "license": "MIT",
  "devDependencies": {
    "@gnosis.pm/mock-contract": "^4.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-truffle5": "^2.0.7",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "8.0.0",
    "@typechain/truffle-v5": "7.0.0",
    "@typechain/web3-v1": "^6",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "chai": "^4.3.7",
    "hardhat": "^2.15.0",
    "hardhat-gas-reporter": "^1.0.8",
    "nyc": "^15.1.0",
    "prando": "^6.0.1",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.1",
    "ccxt": "^4.0.64",
    "dotenv": "^16.1.4",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^6.6.0",
    "web3": "^1",
    "winston": "^3.10.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/voting-test-utils.ts"
    ],
    "reporter": [
      "html"
    ],
    "report-dir": "coverage/ts"
  },
  "prettier": {
    "printWidth": 160,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "arrowParens": "avoid"
 }
}
