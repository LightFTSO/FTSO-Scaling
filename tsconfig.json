{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@app/ftso-protocol": [
        "libs/ftso-protocol/src"
      ],
      "@app/ftso-protocol/*": [
        "libs/ftso-protocol/src/*"
      ]
    }
  }
}