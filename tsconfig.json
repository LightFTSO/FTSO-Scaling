{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "./deployment",
    "./src",
    "./test",
    "./typechain/**/*",
    "./typechain-truffle/**/*",
    "./typechain-web3",
    "./test-utils",
 ],
  "files": ["./hardhat.config.ts"]
}
